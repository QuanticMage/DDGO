    static UiState MigrateAndNormalize(string json)
    {
        UiState? state;

        try
        {
            state = JsonSerializer.Deserialize<UiState>(json);
        }
        catch
        {
            return DefaultState();
        }

        if (state is null)
            return DefaultState();

        return state.Version switch
        {
            1 => NormalizeV1(state),
            _ => DefaultState() // unknown future version
        };
    }

