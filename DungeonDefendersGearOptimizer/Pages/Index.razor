        }

        _eventCollection = catalog
            .Select(x => new EventCollectionRow(
                Name: x.Name,
                Category: x.Category,
                Price: x.Price,
                OwnedCount: ownedByName.TryGetValue(x.Name, out var c) ? c : 0))
