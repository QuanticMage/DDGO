            Csv(r.Type),
            Csv(r.Set),
            Csv(r.Quality),
            r.Level.ToString(),
            r.MaxLevel.ToString()
        };

            // Stats 1..10 (your code uses Stats[i+1])
            for (int i = 0; i < 10; i++)
                fields.Add(r.Stats[i + 1] == 0 ? "" : r.Stats[i + 1].ToString());

