        var catalog = all
            .GroupBy(x => x.ItemName, StringComparer.OrdinalIgnoreCase)
            .Select(g =>
            {
                var rep = g.OrderByDescending(x => x.Price).First();
                return (Name: rep.ItemName, Category: rep.Category, Price: rep.Price);
